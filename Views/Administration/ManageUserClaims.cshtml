@model UserClaimViewModel

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Claims</h2>
        </div>
        <div class="card-body">
            @for(int i = 0; i < Model.claims.Count; i++)
            {
            <div class="form-check">
                <input type="hidden" asp-for="@Model.claims[i].ClaimType" />
                <input class="form-check-input" asp-for="@Model.claims[i].IsSelected" />
                <label class="form-check-label" asp-for="@Model.claims[i].IsSelected">@Model.claims[i].ClaimType</label>
            </div>
            }
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-footer">
            <input class="btn btn-primary" value="Update" style="width:auto" type="submit" />
            <a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>